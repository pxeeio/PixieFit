{
    "name": "kratos",
    "private": true,
    "version": "0.1.0",
    "description": "A PWA Exercise Tracker",
    "license": "MIT",
    "author": "Rodrigo Bondoc",
    "keywords": [],
    "engines": {
        "node": ">=18.15.0"
    },
    "directories": {
        "doc": "docs"
    },
    "scripts": {
        "api": "pnpm --filter=\"./packages/rust-api\"",
        "app": "pnpm --filter=\"./packages/app\"",
