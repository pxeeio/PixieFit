{
    "name": "kratos",
    "private": true,
    "version": "0.1.0",
    "description": "A PWA Exercise Tracker",
    "license": "MIT",
    "author": "Rodrigo Bondoc",
    "keywords": [],
    "engines": {
        "node": ">=18.15.0"
    },
    "directories": {
        "doc": "docs"
    },
    "scripts": {
        "api": "pnpm --filter=\"./packages/rust-api\"",
        "app": "pnpm --filter=\"./packages/app\"",
        "api:dev": "pnpm api dev",
        "app:dev": "pnpm app dev",
        "check:types": "turbo run check:types",
        "cargo": "cd packages/rust-api && cargo",
        "dev": "turbo run dev",
        "lint": "turbo run lint --continue",
        "rust-api": "pnpm --filter=\"./packages/rust-api\""
    },
    "devDependencies": {
        "@types/node": "^20.3.1",
        "@typescript-eslint/eslint-plugin": "^5.60.0",
        "@typescript-eslint/parser": "^5.60.0",
        "concurrently": "^8.2.0",
        "eslint": "^8.43.0",
        "eslint-define-config": "^1.20.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "prettier": "^2.8.8",
        "turbo": "^1.10.7",
        "typescript": "^5.1.6"
    }
}
